{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "text.html.art",
  "name": "Art Template",
  "fileTypes": [".art"],
  "patterns": [
    { "include": "#bracket" },
    { "include": "#html-tag" },
    { "include": "#html-comment" }
  ],
  "repository": {
    "bracket": {
      "name": "markup.changed",
      "begin": "{{",
      "end": "}}",
      "patterns": [
        { "include": "#numeric" },
        { "include": "#string-double-quoted" },
        { "include": "#string-single-quoted" },
        { "include": "#boolean" },
        {
          "name": "markup.heading",
          "match": "{{|}}"
        },
        {
          "name": "keyword.control",
          "match": "\\b(each|if|else|set|block|extend|include)\\b"
        },
        {
          "name": "keyword.control",
          "match": "/(if|each|block)"
        },
        {
          "name": "keyword.operator",
          "match": "\\s(>|<|>=|<=|[=]{1,3})\\s"
        },
        {
          "name": "support.class",
          "match": "\\s(\\?|\\|\\||\\||\\+|:|@|&&)\\s"
        },
        {
          "name": "variable.name",
          "match": "\\$?[a-zA-Z0-9_\\.]+"
        },
        {
          "name": "keyword.operator",
          "match": "\\[|\\]"
        }
      ]
    },
    "string-double-quoted": {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end" }
      },
      "patterns": [
        {
          "name": "constant.character.escape",
          "match": "\\\\\""
        }
      ]
    },
    "string-single-quoted": {
      "name": "string.quoted.single",
      "begin": "'",
      "end": "'",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end" }
      },
      "patterns": [
        {
          "name": "constant.character.escape",
          "match": "\\\\'"
        }
      ]
    },
    "variable": {
      "name": "variable.other",
      "match": "\\b([a-zA-Z0-9-_]+)\\b",
      "patterns": []
    },
    "boolean": {
      "match": "true|false",
      "captures": {
        "0": { "name": "constant.language" }
      },
      "patterns": []
    },
    "numeric": {
      "name": "constant.numeric",
      "match": "\\b(0x[0-9a-fA-F]+|[0-9]+(\\.[0-9]+)?)\\b",
      "patterns": []
    },
    "html-comment": {
      "name": "comment.block.html",
      "begin": "<!--",
      "end": "--\\s*>",
      "captures": {
        "0": { "name": "punctuation.definition.comment.html" }
      },
      "patterns": [
        { "include": "#attention" },
        {
          "match": "--",
          "name": "invalid.illegal.bad-comments-or-CDATA.html"
        }
      ]
    },
    "attention": {
      "name": "storage.type.class.${1:/downcase}",
      "match": "@?(TODO|FIXME|CHANGED|XXX|IDEA|HACK|NOTE|REVIEW|NB|BUG|QUESTION|TEMP)\\b",
      "patterns": []
    },
    "html-tag": {
      "name": "meta.tag.any",
      "begin": "(<\\/?)(([a-zA-Z0-9!:-]+))\\b",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.html" },
        "2": { "name": "entity.name.tag.html" }
      },
      "end": "(\\/?)(>)",
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.html" },
        "2": { "name": "punctuation.definition.tag.html" }
      },
      "patterns": [
        { "include": "#string-double-quoted" },
        { "include": "#string-single-quoted" },
        { "include": "#html-attribute" },
        { "include": "#boolean" },
        { "include": "#numeric" }
      ]
    },
    "html-attribute": {
      "match": "\\s\\b(id)(=)|\\s\\b([a-zA-Z0-9:_.-]+)(=)?",
      "captures": {
        "1": { "name": "entity.other.attribute-name.id.html" },
        "2": { "name": "punctuation.separator.key-value.html" },
        "3": { "name": "entity.other.attribute-name" },
        "4": { "name": "punctuation.separator.key-value.html" }
      },
      "patterns": []
    }
  }
}